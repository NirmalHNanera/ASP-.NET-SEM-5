@model Lab_13.Models.UserFileUploadViewModel

@{
ViewData["Title"] = "Upload Files";
}

<h1>Upload Multiple Files</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="UploadFiles" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Files" class="control-label"></label>
                <input asp-for="Files" type="file" class="form-control" multiple />
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Upload Files</button>
        </form>

        @if (ViewBag.Message != null)
        {
        <div class="alert alert-success mt-3">
            @ViewBag.Message
        </div>
        }

        @if (ViewBag.UploadedFiles != null)
        {
        <h3 class="mt-3">Uploaded Files:</h3>
        <ul class="list-group">
            @foreach (var fileDetail in ViewBag.UploadedFiles as List<Lab_13.Models.FileDetail>)
            {
            <li class="list-group-item">@fileDetail.FileName (@fileDetail.FilePath)</li>
            }
        </ul>
        }
    </div>
</div>
